doctype html
html
    head
        title Assignment
        link(rel="stylesheet", type="text/css", href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/css/style.css")
    body   
        header 
          
            .d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.box-shadow
                .col-md-1
                .col-sm-2
                    h5.my-0.mr-md-auto.font-weight-normal Smart Trending
                nav.my-2.my-md-0.mr-md-3
                    .col-sm-9
                        a.p-2.text-dark(href='/') Article
                if user
                    .col-lg-6
                        a.p-2.text-dark(href='/articles/add') Add Article
                if user
                    .col-sm-
                        a.btn.btn-outline-primary(href='/users/logout') Logout
                else
                    .col-sm-
                        a.btn.btn-outline-primary(href='/users/register') Sign up
                    .col-sm
                        a.btn.btn-outline-primary(href='/users/login') Log in



        .container
            br
            != messages('message', locals)
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{error.msg}
            block content
            br
            
            footer.pos
                p Copyright &copy 2018
        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/main.js')